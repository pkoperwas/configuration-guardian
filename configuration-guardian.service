[Unit]
Description=Configuration Guardian v1.0 - Configuration Backup Management System
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/configuration-guardian
ExecStart=/usr/bin/python3 /opt/configuration-guardian/app.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
